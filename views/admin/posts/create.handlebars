<h1>Create Posts</h1>

{{#each errors}}

   <div class="alert alert-danger">
     {{message}}
   </div>
{{/each}}
<form action="/admin/posts/create" method="post" enctype="multipart/form-data">
    <div class="form-group">
         <label for="title">Title</label>
         <input name="title" type="text" class="form-control" id="title" placeholder="Enter title">
    </div>

    <div class="form-group">
         <label for="file">Upload Image</label>
         <input name="file" type="file" class="form-control">
    </div>

     <div class="form-group">
         <label for="status">Category</label>
         <select name="category" id="category" class="form-control">
               {{#each categories}}

                 <option value="{{id}}">{{name}}</option>

               {{/each}}
         </select>
    </div>
    
    <div class="form-group">
         <label for="status">Status</label>
         <select name="status" id="status" class="form-control">
             <option value="public">Public</option>
             <option value="private">Private</option>
             <option value="draft">Draft</option>
         </select>
    </div>

    <div class="form-check" class="form-check-label">
         <label for="allowComments">
           <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments">

           Allow Comments
         </label>
    </div>  

    <div class="form-group">
         <label for="body">Body</label>
         <textarea name="body" cols="30" row="10" class="form-control" id="body" placeholder="Give some Description"></textarea>
    </div>  
    <button  class="btn btn-success" type="submit">Submit</button>
</form>